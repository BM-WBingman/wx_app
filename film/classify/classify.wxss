/* classify/classify.wxss */
/* 容器样式 */
.wrap{
  padding: 20rpx;
  border-bottom: 1px solid rgb(185, 182, 182);
}
/* 图片样式 */
.dy_img{
  width: 128rpx;
  height: 180rpx;
}
/* 中间一整块的样式 */
.center{
display: inline-block;
width: 450rpx;
margin-left: 15px;
}
.dy_name{
  width: 100%;
  height: 30px;
  
}
/* 电影名字的样式 */
.my_name{
font-size: 36rpx;
font-weight: 600;
}
/* 3D的样式 */
.ifD{
 color: white;
 font-size: 22rpx;
 background-color: 	#40E0D0;
 margin-left: 4px;
}
/* 评分一块的样式 */
.dy_score{
margin-top: -3px;
}
/* 猫眼评分四个字的样式 */
.my_text{
font-size: 26rpx;
}
/* 评分的样式 */
.my_score{
  font-size: 34rpx;
  color: orange;
  margin-left: 4px;
}
/* 主演名字的样式 */
.dy_star{
  font-size: 30rpx;
  color: gray;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp:1;
   margin: 3px auto;
}
/* 放映的样式 */
.dy_look{
font-size: 30rpx;
color: rgb(180, 179, 179)

}
/* 右边按钮部分整块样式 */
.right{
  float: right;
  width: 20%;
  margin-top: -95px;
}
/* 按钮的样式 */
.dy_shop{
display: inline-block;
background-color: red;
color: white;
font-size: 22rpx;
text-align: center;
padding: 8rpx 22rpx;
border: 1px solid rgb(182, 4, 4);
border-radius: 10rpx;
vertical-align: top;
margin-top:100rpx; 
margin-left:50rpx
}
.dy_noshop{
display: inline-block;
background-color: blue;
color: white;
font-size: 22rpx;
text-align: center;
padding: 8rpx 22rpx;
border: 1px solid rgb(2, 39, 161);
border-radius: 10rpx;
vertical-align: top;
margin-top:100rpx; 
margin-left:50rpx
}